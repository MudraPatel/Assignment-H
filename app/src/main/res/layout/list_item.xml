<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="08dp"
    android:background="@color/bg_color"
    android:elevation="2dp"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/ivIndicator"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@android:drawable/presence_invisible"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/itemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_item"
        android:layout_toRightOf="@id/ivIndicator"
        android:layout_toEndOf="@id/ivIndicator"
        android:paddingBottom="05dp"/>

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTextView"
        android:text="@string/content_description"
        android:textColor="@color/green"
        android:textSize="@dimen/text_size_content"
        android:layout_toRightOf="@id/ivIndicator"
        android:layout_toEndOf="@id/ivIndicator"

        />


</RelativeLayout>